@model Assessment.Models.RoleManagementViewModels.EditUserRolesViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>Edit User Roles</h2>
<form asp-controller="RoleManagement" asp-action="EditUserRoles" method="post">

    @for(int i = 0; i < Model.ApplicationRoles.Count; i++)
    {
        <input type="hidden" asp-for="ApplicationRoles[i]" />
    }

    <input type="hidden" asp-for="User.Id" />
    <input type="hidden" asp-for="User.UserName" />
    

    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-2 control-label">UserName:</label>
            <div class="col-sm-4">
                <span class="form-control" disabled>@Model.User.UserName</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Roles:</label>
            <div class="col-sm-4">
                <select asp-for="UserRoles" class="form-control" multiple>
                    @foreach (var role in Model.ApplicationRoles)
                    {
                        @if (Model.UserRoles.Contains(role))
                        {
                            <option selected>@role</option>
                        }
                        else
                        {
                            <option>@role</option>
                        }

                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <a asp-controller="RoleManagement"
                   asp-action="Users"
                   class="btn btn-primary">
                    Cancel
                </a>
            </div>
        </div>

    </div>
</form>